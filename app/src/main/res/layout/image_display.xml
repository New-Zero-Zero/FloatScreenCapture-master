<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#00000000"
    android:orientation="horizontal" >

    <ImageView
        android:layout_weight="1"

        android:id="@+id/image_display_imageview"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageView

        android:layout_weight="1"
        android:id="@+id/image_display_imageview_2"
        android:scaleType="centerCrop"

        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageView

        android:layout_weight="1"
        android:id="@+id/image_display_imageview_3"
        android:scaleType="centerCrop"

        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageView
        android:layout_weight="1"
        android:id="@+id/image_display_imageview_4"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="match_parent" />
    <ImageView
        android:layout_weight="1"
        android:id="@+id/image_display_imageview_5"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/tv_click"
                android:src="@mipmap/ic_imagetool_crop"
                android:text="截图"
                android:gravity="center"
                android:textSize="20sp"
                android:background="#00000000"
                android:paddingBottom="5dp"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


</LinearLayout>